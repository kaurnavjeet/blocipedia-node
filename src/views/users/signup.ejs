<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body>

  <% include ../static/partials/navbar.ejs %>
  <main class="container">

    <% include ../static/partials/messages.ejs %>
    <div class="jumbotron">
      <h4>Sign Up</h4>
      <div class="row ">
        <div class="col-md-8">
          <form action="/users" method="post">

            <div class="form-group">
              <input type="text" name="username" placeholder="Enter Username" class="form-control" />
              <small class="text-muted" id="usernameHelp">Must be unique and at least 6 characters in length</small>
            </div>

            <div class="form-group">
              <input type="text" name="email" placeholder="Enter Email" class="form-control" />
              <small class="text-muted" id="emailHelp">Must be a valid email</small>
            </div>

            <div class="form-group">
              <input type="password" name="password" placeholder="Enter Password" class="form-control">
              <small class="text-muted" id="passwordHelp">Must be at least 6 characters in length</small>
            </div>

            <div class="form-group">
              <input type="password" name="password-conf" placeholder="Confirm Password" class="form-control">
              <small class="text-muted" id="passwordHelp">Must match the password provided above</small>
            </div>

            <hr class="my-4">
            <input type="submit" value="Sign Up" class="btn btn-outline-dark">
          </form>
        </div>
      </div>

    </div>
  </main>

  <% include ../static/partials/baseScripts.ejs %>
</body>

</html>