<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body>

  <% include ../static/partials/navbar.ejs %>

  <main class="container">

    <% include ../static/partials/messages.ejs %>

    <h1>New Wiki</h1>

    <form action="/wikis/create" method="post">
      <div class="form-group">
        <label for="title">Wiki title</label>
        <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        <small class="text-muted" id="titleHelp">Title must be atleast 2 characters in length</small>
      </div>

      <div class="form-group">
        <label for="body">Wiki Body</label>
        <textarea name="body" rows="4" class="form-control" placeholder="Enter Wiki body"></textarea>
        <small class="text-muted" id="bodyHelp">Body must be atleast 6 characters in length</small>
      </div>
      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
  </main>

  <% include ../static/partials/baseScripts.ejs %>

</body>

</html>