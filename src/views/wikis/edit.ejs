<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body>

  <% include ../static/partials/navbar.ejs %>

  <main class="container">

    <% include ../static/partials/messages.ejs %>

    <h1>Edit Wiki</h1>

    <form action="/wikis/<%= wiki.id %>/update" method="post">
      <div class="form-group">
        <label for="title">Wiki Title</label>
        <input type="text" class="form-control" value="<%= wiki.title %>" name="title" aria-describedby="titleHelp"
          placeholder="Enter Title">
      </div>
      <div class="form-group">
        <label for="body">Wiki Body</label>
        <textarea name="body" rows="4" class="form-control" placeholder="Enter Wiki body"><%= wiki.body %></textarea>
      </div>

      <button type="submit" class="btn btn-outline-dark">Submit</button>
    </form>
  </main>

  <% include ../static/partials/baseScripts.ejs %>
</body>

</html>