<% if(messages.error) { %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <button class="close" type="button" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  Validation errors:
  <ul>
    <% messages.error.forEach(err => { %>
    <li>
      <%= `${err.param} ${err.msg} ` %>
    </li>
    <% }) %>
  </ul>
</div>

<% } %>